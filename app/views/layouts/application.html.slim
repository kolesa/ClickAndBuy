doctype
html lang="en"
  head
    meta charset="utf-8"
      meta content="width=(device-width,)initial-scale=1.0" name="viewport"
        meta content="" name="description"
          meta content="" name="author"
            title SimpleShop - Start Bootstrap Template
            = stylesheet_link_tag    "application", media: "all"
            = javascript_include_tag "application"
            = csrf_meta_tags
  body
    nav.navbar.navbar-inverse.navbar-fixed-top role="navigation"
      .container
        .navbar-header
          button.navbar-toggle data-target=".navbar-ex1-collapse" data-toggle="collapse" type="button"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          = link_to "home", root_path, {class: 'navbar-brand'}
        .collapse.navbar-collapse.navbar-ex1-collapse
          form.navbar-form.navbar-left
            input.form-control.col-lg-4.col-md-4.col-sm-4 placeholder="Search" type="text"
          ul.nav.navbar-nav.navbar-right
            - if signed_in?
              li= link_to current_user.email, user_path
              li= link_to "Sign Out", destroy_user_session_path, method: "delete"
            - else
              li= link_to "Sign In", new_user_session_path
          ul.nav.navbar-nav.navbar-left
            li
              = link_to 'Shops', shops_path
            li
              = link_to 'Items', items_path
            
            /li.dropdown
              a.dropdown-toggle data-toggle="dropdown" href="#"
                | Items
                b.caret
              ul.dropdown-menu
                li
                  a< href="portfolio-1-col.html" 1 col
                li
                  a< href="portfolio-2-col.html" 2 col
                li
                  a href="portfolio-3-col.html" 3 col
                li
                  a href="portfolio-4-col.html" 4 col
                li.active
                  a href="portfolio-item.html" item
            li.dropdown
              a.dropdown-toggle data-toggle="dropdown" href="#"
                | Other Pages
                b.caret
              ul.dropdown-menu
                li
                  a href="full-width.html" fv
                li
                  a href="sidebar.html" sied
                li
                  a href="faq.html" faq
                li
                  a href="404.html" 404
                li
                  a href="pricing.html" pr
                li
                  a href="blog-home-1.html" bl1
                li
                  a href="blog-home-2.html" bl2
                li
                  a href="blog-post.html" bl-p

    = yield